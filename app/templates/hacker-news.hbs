{{! template-lint-disable no-inline-styles  }}
<div class="ui mobile ony grid">
  <br >
  <br><br>
  <br >
</div>
<div class="ui basic segment wow fadeIn" data-wow-duration="0.5s">
  <img src="https://readbyhumans.com/images/hn.png" width="330px" alt="" >
  <br >
  <br >
  powered by HNPWA
  <a href="https://github.com/tastejs/hacker-news-pwas" target="_blank" rel="noopener">
    <i class="fab fa-github fa-lg"></i>
  </a>
  <br >
  <br >
  <br >
  <div style="height: 800px;">
    {{#ember-scrollable autoHide=false}}
      {{#each model as |post|}}
        <a href={{post.url}} target="_blank" rel="noopener">
          <div class="ui feed">
            <div class="event">
              <div class="label">
                <img
                  src="https://is1-ssl.mzstatic.com/image/thumb/Purple128/v4/61/e7/6d/61e76d36-7b44-7173-2540-412605060935/AppIcon-1x_U007emarketing-85-220-0-6.png/246x0w.jpg"
                alt="">
              </div>
              <div class="content">
                <div class="date">
                  {{post.time_ago}}
                </div>
                <div class="summary">
                  {{post.title}}
                </div>
                <div class="meta">
                  <a class="like">
                    <i class="comment icon"></i>
                    {{post.comments_count}}
                  </a>
                </div>
              </div>
            </div>
          </div>
        </a>
        <div class="ui divider"></div>
      {{/each}}
    {{/ember-scrollable}}
  </div>
</div>