      <button class="ui icon toggle basic inverted button" onclick="toggleSidebar()" type="button">
        <i class="content icon"></i>
      </button>
    </div>
    <div class="right menu">
      <div class="header item" id="main_heading">
        <h1 class="main_heading">
          NewsAPPi
        </h1>
      </div>
    </div>
  </div>
  <div class="ui left demo vertical inverted sidebar labeled icon menu" id="sidebar">
    <a class="item" href="/news">
      <i class="far fa-newspaper fa-2x" id="newspaper"></i>
    </a>
    <a class="item" href="/reddit">
      <i class="fab fa-reddit fa-2x" id="reddit"></i>
    </a>
    <a class="item" href="/google">
